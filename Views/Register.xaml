<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.Views.Register"
             Title="Register">
    <VerticalStackLayout
        Padding="10">
        <Image Source="user.png"
               WidthRequest="200"
               HeightRequest="200"/>



        <Label Text="Cédula"/>
        <Entry 
            Placeholder="Ingresa tu CÉDULA aqui" 
            Keyboard="Numeric"/>
            
        
        <Label Text="Nombre"/>
        <Entry 
            Placeholder="Ingresa tus NOMBRES aqui" />
        
        <Label Text="Fecha de Ncimiento"/>
        <DatePicker
            Format="dd/MM/yyyy"/>

        <Picker
            Title="Escoja Sexo">
            <Picker.Items>
                <x:String>Hombre</x:String>
                <x:String>Mujer</x:String>
            </Picker.Items>
        </Picker>
    
        <Label Text="Trabaja" />
        <HorizontalStackLayout>
            <RadioButton Content="Sí"  />
            <RadioButton Content="No"  />
        </HorizontalStackLayout>

        <Button x:Name="btnGuardar"
                Text="Guardar"
                Command="{Binding RegistrarCommand}">
            
        </Button>



    </VerticalStackLayout>
</ContentPage>