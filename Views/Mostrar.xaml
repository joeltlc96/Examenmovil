<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.Views.Mostrar"
             Title="Mostrar">
    <VerticalStackLayout
        VerticalOptions="Center"
        Padding="50"
        Spacing="10">

        <Label 
            Text="Informacion del Estudiante"
            FontSize="Large"
            FontAttributes="Bold"/>

        <Image Source="{Binding Estudiante.Img}"
               MaximumHeightRequest="200"/>

        <VerticalStackLayout>
            <Label Text="CÃ©dula" 
                   FontSize="Title"
                   TextDecorations="Underline"/>
            <Label Text="{Binding Estudiante.Cedula}"
                   FontSize="Subtitle"/>
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Nombres" 
                   FontSize="Title"
                   TextDecorations="Underline"/>
            <Label Text="{Binding Estudiante.Nombre}"
                   FontSize="Subtitle"/>
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="FechaNacimiento" 
                   FontSize="Title"
                   TextDecorations="Underline"/>
            <Label Text="{Binding Estudiante.FechaNacimiento, StringFormat='{0:dd/MM/yyyy}'}"
                   FontSize="Subtitle"/>
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Sexo"
                   FontSize="Title"
                   TextDecorations="Underline"/>
            <Label Text="{Binding Estudiante.Sexo}"
                   FontSize="Subtitle"/>
        </VerticalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Trabaja?" 
                   FontSize="Title" />
            <Switch IsToggled="{Binding Estudiante.Trabaja}" />
        </HorizontalStackLayout>

        <Button Text="Registrar otro Estudiante" 
                x:Name="btnGuardar"
                Command="{Binding LimpiarCamposCommand}" />
    </VerticalStackLayout>
</ContentPage>